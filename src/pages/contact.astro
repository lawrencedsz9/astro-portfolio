---
import Layout from "../layouts/Layout.astro";
import Social from "../components/social.astro";
const title = "Get in Touch";
---

<Layout title={title}>
  <main>
    <div class="contact-container">
      <div class="contact-content">
        <h1>{title}</h1>
        <p class="contact-intro">
          If you have a question or just want to say hi,
          you can find me on social media
        </p>
        <div class="social-links">
          <div class="social-item">
            <Social platform="Github" username="lawrencedsz9">
              <img src="/Github.png" alt="GitHub" class="social-icon" />
              <div class="social-text">
                <h3>GitHub</h3>
                <p>Check out my code</p>
              </div>
            </Social>
          </div>

          <div class="social-item">
            <a href="https://www.linkedin.com/in/lawrencedsouza" target="_blank" rel="noopener noreferrer" class="linkedin-link">
              <img src="/linkedin.png" alt="LinkedIn" class="social-icon" />
              <div class="social-text">
                <h3>LinkedIn</h3>
                <p>Connect with me</p>
              </div>
            </a>
          </div>

          <div class="social-item">
            <a href="mailto:lawrencedsouza125@gmail.com" class="email-link">
              <img src="/email.png" alt="Email" class="social-icon" />
              <div class="social-text">
                <h3>Email</h3>
                <p>lawrencedsouza125@gmail.com</p>
              </div>
            </a>
          </div>

          <div class="social-item">
            <Social platform="Twitter" username="lawrencedsouza">
              <img src="/twitter.png" alt="Twitter" class="social-icon" />
              <div class="social-text">
                <h3>Twitter</h3>
                <p>Follow me</p>
              </div>
            </Social>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    min-height: calc(100vh - 70px);
    background: var(--color-primary);
    padding-top: 70px;
    width: 100%;
  }

  .contact-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
  }

  .contact-content {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    text-align: center;
    background: linear-gradient(to right, var(--color-text), var(--color-accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .contact-intro {
    color: var(--color-text-muted);
    text-align: center;
    margin-bottom: 2rem;
    font-size: 1.2rem;
    line-height: 1.5;
  }

  .social-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
  }

  .social-item {
    transition: transform 0.25s ease;
  }

  .social-item:hover {
    transform: translateY(-3px);
  }

  .social-item a, .email-link, .linkedin-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 0.5rem;
    text-decoration: none;
    color: var(--color-text);
    transition: all 0.25s ease;
  }

  .social-item a:hover, .email-link:hover, .linkedin-link:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  .social-icon {
    width: 30px;
    height: 30px;
    object-fit: contain;
    transition: transform 0.25s ease;
  }

  .social-item:hover .social-icon {
    transform: scale(1.2);
  }

  .social-text h3 {
    font-size: 1.1rem;
    margin: 0;
    color: var(--color-text);
  }

  .social-text p {
    margin: 0.15rem 0 0;
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .contact-container {
      padding: 1rem;
    }

    h1 {
      font-size: 2.5rem;
    }

    .contact-intro {
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }

    .social-links {
      grid-template-columns: 1fr;
    }

    .social-item a, .email-link, .linkedin-link {
      padding: 0.75rem;
    }

    .social-icon {
      width: 25px;
      height: 25px;
    }
  }

  @media (max-width: 480px) {
    h1 {
      font-size: 2rem;
    }

    .contact-content {
      padding: 1.5rem;
    }

    .social-text h3 {
      font-size: 1rem;
    }

    .social-text p {
      font-size: 0.8rem;
    }
  }
</style>
