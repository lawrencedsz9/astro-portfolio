---
import Layout from "../layouts/Layout.astro";
import Social from "../components/social.astro";
const title = "Contact Me!";
---

<Layout title={title}>
  <main>
    <div class="contact-container">
      <h1>{title}</h1>
      <p class="intro">  
        If you have a question or just want to say hi,
        you can find me on social media:
      </p>
      <ul class="social-list">
        <li>
          <Social platform="Github" username="lawrencedsz9">
            <img src="/Github.png" class="social-icon" />
            <span>you can find my code on <b>GitHub</b>.</span>
          </Social>
        </li>
        <li>
          <a href="https://www.linkedin.com/in/lawrence-dsouza-a15886337" target="_blank" rel="noopener noreferrer">
            <img src="/linkedin.png" class="social-icon" />
            <span>View my <b>LinkedIn</b> profile.</span>
          </a>
        </li>
        <li>
          <a href="mailto:lawrencedsouza125@gmail.com">
            <img src="/email.png" class="social-icon" />
            <span>Mail me at <b>lawrencedsouza125@gmail.com</b></span>
          </a>
        </li>
        <li>
          <a href="https://x.com/Lawrenc83357878?t=efLHHGdqgQQC3HCOthz63g&s=09" target="_blank" rel="noopener noreferrer">
            <img src="/twitter.png" class="social-icon" />
            <span>Follow me on <b>Twitter</b>.</span>
          </a>
        </li>
      </ul>
    </div>
  </main>
</Layout>

<style>
  main {
    min-height: calc(100vh - 70px);
    background: var(--color-primary);
    padding-top: 70px;
    width: 100%;
  }

  .contact-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    text-align: center;
    background: linear-gradient(to right, var(--color-text), var(--color-accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .intro {
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    font-size: 1.1rem;
    line-height: 1.6;
    text-align: center;
  }

  .social-list {
    list-style-type: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  li {
    transition: transform 0.3s ease;
  }

  li:hover {
    transform: translateY(-3px);
  }

  a, :global(a) {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    border-radius: 0.5rem;
    text-decoration: none;
    color: var(--color-text);
    transition: all 0.3s ease;
  }

  a:hover, :global(a:hover) {
    background: rgba(255, 255, 255, 0.05);
  }

  .social-icon {
    width: 30px;
    height: 30px;
    object-fit: contain;
    transition: transform 0.3s ease;
  }

  li:hover .social-icon {
    transform: scale(1.1);
  }

  span {
    color: var(--color-text-muted);
  }

  b {
    color: var(--color-text);
    transition: color 0.3s ease;
  }

  b:hover {
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .contact-container {
      padding: 2rem 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    .intro {
      font-size: 1rem;
    }

    a, :global(a) {
      padding: 0.75rem;
    }

    .social-icon {
      width: 25px;
      height: 25px;
    }
  }
</style>
