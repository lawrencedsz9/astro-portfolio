---
import Social from "./social.astro";
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <p class="copyright">@2023 Lawrence Dsouza. All rights reserved.</p>

      <nav class="footer-links">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/projects">Projects</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </nav>

      <div class="social-links">
        <a href="https://github.com/lawrencedsz9" target="_blank" rel="noopener noreferrer" class="social-link">
          <img src="/Github.png" class="social-icon" alt="GitHub" width="20" height="20" />
        </a>
        <a href="https://www.linkedin.com/in/lawrencedsouza" target="_blank" rel="noopener noreferrer" class="social-link">
          <img src="/linkedin.png" class="social-icon" alt="LinkedIn" width="20" height="20" />
        </a>
        <a href="https://twitter.com/lawrence_dsouza" target="_blank" rel="noopener noreferrer" class="social-link">
          <img src="/twitter.png" class="social-icon" alt="Twitter" width="20" height="20" />
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-primary);
    color: var(--color-text);
    padding: 1rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
    z-index: 10;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .footer-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .copyright {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    margin: 0;
    white-space: nowrap;
  }

  .footer-links ul {
    display: flex;
    gap: 2rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links ul li a {
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color 0.3s ease;
    font-size: 0.9rem;
    padding: 0.5rem 0;
  }

  .footer-links ul li a:hover {
    color: var(--color-accent);
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .social-link {
    display: inline-block;
    transition: transform 0.3s ease;
  }

  .social-link:hover {
    transform: translateY(-2px);
  }

  .social-icon {
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .social-icon:hover {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
      padding: 1rem 0;
    }

    .footer-links ul {
      justify-content: center;
      gap: 1.5rem;
      flex-wrap: wrap;
    }

    .social-links {
      justify-content: center;
    }
  }
</style>
