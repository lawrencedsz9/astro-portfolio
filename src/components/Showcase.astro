---
import logos from '../images/invent.png';

export interface Props {
  heading?: string;
  text?: string;
  showExtra?: boolean;
}

const { 
  heading = "Hi, I'm Lawrence", 
  text = "Passionate Front-end Developer crafting beautiful and responsive web experiences", 
  showExtra = false 
} = Astro.props as Props;
---

<section class="showcase">
  <div class="container">
    <div class="showcase-content">
      <div class="showcase-text">
        <div class="text-content">
          <h1>{heading}</h1>
          <p>{text}</p>
          {showExtra && (
            <div class="showcase-cta">
              <a href="/projects" class="btn btn-primary">View My Work</a>
              <a href="/contact" class="btn btn-outline">Contact Me</a>
            </div>
          )}
        </div>
      </div>

      {showExtra && (
        <div class="showcase-img">
          <div class="img-wrapper">
            <img 
              src={logos.src} 
              alt="Developer Illustration" 
              width="500" 
              height="500" 
              class="logos"
            />
          </div>
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .showcase {
    min-height: 100vh;
    background: var(--gradient-primary);
    padding-top: 100px;
    position: relative;
    overflow: hidden;
  }

  .showcase::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 50% 50%, rgba(233, 69, 96, 0.1) 0%, transparent 50%);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
  }

  .showcase-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 4rem;
    height: calc(100vh - 100px);
  }

  .showcase-text {
    flex: 1;
    max-width: 600px;
    animation: fadeInUp 1s ease-out;
  }

  .text-content {
    position: relative;
    z-index: 2;
  }

  .showcase h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    background: linear-gradient(to right, var(--color-text), var(--color-accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradientText 3s ease infinite;
  }

  .showcase p {
    font-size: 1.25rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    color: var(--color-text-muted);
  }

  .showcase-cta {
    display: flex;
    gap: 1rem;
  }

  .btn {
    display: inline-block;
    padding: 1rem 2rem;
    border-radius: 50px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 1rem;
    position: relative;
    overflow: hidden;
  }

  .btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.1);
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }

  .btn:hover::before {
    transform: translateX(0);
  }

  .btn-primary {
    background: var(--color-accent);
    color: var(--color-text);
    border: none;
  }

  .btn-outline {
    background: transparent;
    border: 2px solid var(--color-accent);
    color: var(--color-accent);
  }

  .btn-outline:hover {
    background: var(--color-accent);
    color: var(--color-text);
  }

  .showcase-img {
    flex: 1;
    position: relative;
    animation: fadeInRight 1s ease-out;
  }

  .img-wrapper {
    background: rgba(255, 255, 255, 0.05);
    padding: 2rem;
    border-radius: 20px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(8px);
    transition: transform 0.3s ease;
  }

  .img-wrapper:hover {
    transform: translateY(-10px);
  }

  .showcase-img img {
    max-width: 100%;
    height: auto;
    border-radius: 15px;
    filter: grayscale(0.3) contrast(1.1);
    transition: all 0.3s ease;
  }

  .showcase-img:hover img {
    filter: grayscale(0) contrast(1);
  }

  .showcase-badge {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-accent);
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    box-shadow: 0 4px 16px rgba(233, 69, 96, 0.3);
  }

  .showcase-badge p {
    margin: 0;
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-text);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes gradientText {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  @media (max-width: 968px) {
    .showcase-content {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
      height: auto;
      padding: 4rem 0;
    }

    .showcase h1 {
      font-size: 3rem;
    }

    .showcase-cta {
      justify-content: center;
    }

    .showcase-img {
      max-width: 80%;
      margin: 0 auto;
    }
  }

  @media (max-width: 480px) {
    .showcase h1 {
      font-size: 2.5rem;
    }

    .showcase p {
      font-size: 1.1rem;
    }

    .showcase-cta {
      flex-direction: column;
    }

    .btn {
      width: 100%;
      text-align: center;
    }
  }
</style>